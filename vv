    <script>
      // Initialize lucide icons with stroke width 1.5
      document.addEventListener('DOMContentLoaded', () => {
        if (window.lucide) {
          window.lucide.createIcons({
            attrs: { 'stroke-width': 1.5 }
          });
        }
      });

      // Mobile nav toggle
      const mobileBtn = document.getElementById('mobileMenuBtn');
      const mobileNav = document.getElementById('mobileNav');
      if (mobileBtn && mobileNav) {
        mobileBtn.addEventListener('click', () => {
          mobileNav.classList.toggle('hidden');
          mobileBtn.classList.toggle('ring-2');
          mobileBtn.classList.toggle('ring-amber-500/40');
        });
      }

      // Hero carousel
      const slides = Array.from(document.querySelectorAll('[data-hero-slide]'));
      let idx = 0;
      if (slides.length > 0) {
        setInterval(() => {
          const current = slides[idx];
          idx = (idx + 1) % slides.length;
          const next = slides[idx];
          current.classList.add('opacity-0');
          current.classList.remove('opacity-100');
          next.classList.add('opacity-100');
          next.classList.remove('opacity-0');
        }, 5000);
      }

      // Lightbox
      const lb = document.getElementById('lightbox');
      const lbImg = document.getElementById('lightboxImg');
      const lbClose = document.getElementById('lightboxClose');
      const lbBtns = document.querySelectorAll('[data-lightbox-btn]');
      lbBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const img = btn.querySelector('img');
          if (!img) return;
          lbImg.src = img.src.replace('w=800', 'w=1600');
          lb.classList.remove('hidden');
          lb.classList.add('flex');
          document.body.classList.add('overflow-hidden');
        });
      });
      const closeLb = () => {
        lb.classList.add('hidden');
        lb.classList.remove('flex');
        document.body.classList.remove('overflow-hidden');
      };
      lbClose.addEventListener('click', closeLb);
      lb.addEventListener('click', (e) => {
        if (e.target === lb) closeLb();
      });
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !lb.classList.contains('hidden')) closeLb();
      });

      // Simple form handler (demo)
      const form = document.getElementById('bookingForm');
      const statusEl = document.getElementById('formStatus');
      if (form) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          statusEl.className = 'text-sm mt-2 text-neutral-700';
          statusEl.textContent = 'Sending...';
          setTimeout(() => {
            statusEl.className = 'text-sm mt-2 text-emerald-700';
            statusEl.textContent = 'Thanks! Your request has been received. We’ll be in touch within 24 hours.';
            form.reset();
          }, 900);
        });
      }

      // Year in footer
      document.getElementById('year').textContent = new Date().getFullYear();
    </script>
  </body>
</html>
